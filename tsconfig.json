{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": false,

    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./",
    "lib": ["es6", "dom"],
    "module": "ES6",
    "target": "ES5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "*.ts"
  ]
}
