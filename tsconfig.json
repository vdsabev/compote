{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "suppressImplicitAnyIndexErrors": false,
    "target": "ES6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
